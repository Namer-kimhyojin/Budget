# Django Settings
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS/CSRF Settings
# For production, list specific allowed origins (https recommended)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Security (production defaults are secure in settings.py; override if needed)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
USE_X_FORWARDED_PROTO=True
X_FRAME_OPTIONS=DENY

# DRF throttling/pagination
DRF_THROTTLE_ANON=120/minute
DRF_THROTTLE_USER=1200/minute
DRF_PAGE_SIZE=200

# Database
# Option 1: SQLite (default, no configuration needed)
